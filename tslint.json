{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {},
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-postbrace"
        ],
        "space-within-parens": [
            true
        ],
        "no-trailing-whitespace": [
            true,
            "ignore-comments"
        ],
        "no-parameter-reassignment": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "parameter": "nospace",
                "variable-declaration": "nospace",
                "property-declaration": "nospace"
            }
        ],
        "no-irregular-whitespace": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "no-console": true,
        "no-bitwise": false,
        "curly": [true],
        "newline-before-return": true,
        "no-inferrable-types": true,
        "eofline": true,
        "prefer-conditional-expression": true,
        "no-string-throw": true,
        "semicolon": true
    },
    "rulesDirectory": []
}